<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.075"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.85"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/jump_back"
                android:background="@drawable/button_circle"
                app:icon="@drawable/ic_arrow_back_24px"
                app:iconSize="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                android:text="@string/title_activity_settings" />
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.075"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.4"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/card_background_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.15">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_weight="0.85"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/continue_play"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/connectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.4"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/card_background_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.85">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_weight="0.85"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/speed_play"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"/>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/speedControl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                android:padding="1dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/speedOption1"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="1X"
                    style="@style/Widget.Material3.Button.Segmented"
                    android:backgroundTint="@drawable/segmented_button_color"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/speedOption2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="2X"
                    style="@style/Widget.Material3.Button.Segmented"
                    android:backgroundTint="@drawable/segmented_button_color"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/speedOption3"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="3X"
                    style="@style/Widget.Material3.Button.Segmented"
                    android:backgroundTint="@drawable/segmented_button_color"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.4"
            android:layout_height="?attr/actionBarSize"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/card_background_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.15">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_weight="0.85"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/disInOrder_play"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/queueButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.4"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/card_background_1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.85"
            android:visibility="gone">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_weight="0.85"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/speed_play"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"/>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/Control"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                android:padding="1dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Option1"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="1X"
                    style="@style/Widget.Material3.Button.Segmented"
                    android:backgroundTint="@drawable/segmented_button_color"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Option2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="2X"
                    style="@style/Widget.Material3.Button.Segmented"
                    android:backgroundTint="@drawable/segmented_button_color"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/Option3"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="3X"
                    style="@style/Widget.Material3.Button.Segmented"
                    android:backgroundTint="@drawable/segmented_button_color"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="0dp"
            app:layout_constraintWidth_percent="0.82"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/card_background_1"
            android:padding="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/background_theme"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <com.google.android.material.button.MaterialButtonToggleGroup
                    android:id="@+id/colorControl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:singleSelection="true"
                    android:gravity="center"
                    android:padding="11dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/colorOption1"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_light"
                        style="@style/Widget.Material3.Button.Segmented"
                        android:backgroundTint="@drawable/segmented_button_color"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/colorOption2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_colorful"
                        style="@style/Widget.Material3.Button.Segmented"
                        android:backgroundTint="@drawable/segmented_button_color"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/colorOption3"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/theme_dark"
                        style="@style/Widget.Material3.Button.Segmented"
                        android:backgroundTint="@drawable/segmented_button_color"/>
                </com.google.android.material.button.MaterialButtonToggleGroup>
            </LinearLayout>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>