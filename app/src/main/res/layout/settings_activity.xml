<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.075"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.85"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/backButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/jump_back"
                android:background="@drawable/button_circle"
                app:icon="@drawable/ic_arrow_back_24px"
                app:iconSize="20dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="20sp"
                android:text="@string/title_activity_settings" />
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.075"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.075"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.85"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/card_background_1">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_weight="0.85"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/continue_play"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"/>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/connectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.075"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.075"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.85"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/card_background_1">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_weight="0.85"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/speed_play"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"/>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:id="@+id/speedControl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                android:padding="1dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/speedOption1"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="1X"
                    style="@style/Widget.Material3.Button.Segmented"
                    android:backgroundTint="@drawable/segmentede_button_color"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/speedOption2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="2X"
                    style="@style/Widget.Material3.Button.Segmented"
                    android:backgroundTint="@drawable/segmentede_button_color"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/speedOption3"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="3X"
                    style="@style/Widget.Material3.Button.Segmented"
                    android:backgroundTint="@drawable/segmentede_button_color"/>
        </com.google.android.material.button.MaterialButtonToggleGroup>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.075"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.075"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.85"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/card_background_1">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="0dp"
                android:layout_weight="0.85"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="@string/speed_play"
                android:layout_marginEnd="5dp"
                android:layout_marginStart="5dp"/>

            <com.google.android.material.button.MaterialButtonToggleGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:singleSelection="true"
                android:padding="1dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/colorOption1"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="1X"
                    style="@style/Widget.Material3.Button.Segmented"
                    android:backgroundTint="@drawable/segmentede_button_color"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/colorOption2"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="2X"
                    style="@style/Widget.Material3.Button.Segmented"
                    android:backgroundTint="@drawable/segmentede_button_color"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/colorOption3"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="3X"
                    style="@style/Widget.Material3.Button.Segmented"
                    android:backgroundTint="@drawable/segmentede_button_color"/>
            </com.google.android.material.button.MaterialButtonToggleGroup>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="0.075"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>