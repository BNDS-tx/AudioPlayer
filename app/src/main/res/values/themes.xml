<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AudioPlayer" parent="Theme.Material3.DayNight.NoActionBar">">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AudioPlayer.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AudioPlayer.AppBarOverlay" parent="ThemeOverlay.Material3.Dark.ActionBar" />

    <style name="Theme.AudioPlayer.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <style name="Theme.AudioPlayer.MD3Button" parent="ThemeOverlay.Material3.Button" />

    <!-- 样式用于扩展状态的标题 -->
    <style name="ExpandedTitleTextAppearance" parent="TextAppearance.Material3.HeadlineLarge">
        <item name="android:textSize">40sp</item> <!-- 自定义字体大小 -->
        <item name="android:textColor">@color/white</item> <!-- 自定义字体颜色 -->
        <item name="android:fontFamily">sans-serif-medium</item> <!-- 其他属性可选 -->
    </style>

    <!-- 样式用于折叠状态的标题 -->
    <style name="CollapsedTitleTextAppearance" parent="TextAppearance.Material3.ActionBar.Title">
        <item name="android:textSize">18sp</item> <!-- 自定义字体大小 -->
        <item name="android:textColor">@color/white</item> <!-- 自定义字体颜色 -->
        <item name="android:fontFamily">sans-serif</item> <!-- 其他属性可选 -->
    </style>
</resources>